<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <h3> Product Details </h3>
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <br>

          <h3> User Reviews </h3>

          <% @reviews.order(created_at: :desc).each do |review| %>

          <dt>Product Ratings</dt>
          <dd> <%= review.rating %> </dd>
          <dt> Review Description </dt>
          <dd> <%= review.description  %> </dd>
          <br>

          <% if current_user == review.user %>

          <dt> Delete your review </dt>
          <dd> <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete %> </dd>
          <br>

          <% end %>


          <% end %>

          <% if current_user %>

           <h3> Add your review </h3>

          <%= form_for [@product, @review] do |form| %>

            <% if form.object.errors.any? %>
              <div class="alert alert-danger">
                <strong>The following errors prevented saving:</strong>
                <ul>
                  <% form.object.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>


            <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select(1..10), { include_blank: true }, class: 'form-control' %>
            </div>


            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>

            <%= form.submit 'Submit Review', class: 'btn btn-primary' %>

          <% end %>
          <% end %>



        </dl>
      </div>
    </div>

  </article>

</section>
